<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:jsfc="clr-namespace:JSSoft.Font.ApplicationHost.Controls">

    <ControlTemplate x:Key="ZoomLevelControl_Template" TargetType="{x:Type jsfc:ZoomLevelControl}">
        <ComboBox x:Name="PART_ComboBox" IsEditable="True" FontSize="11" BorderThickness="0" />
    </ControlTemplate>

    <Style TargetType="{x:Type jsfc:ZoomLevelControl}">
        <Setter Property="Template" Value="{StaticResource ZoomLevelControl_Template}" />
    </Style>
    
</ResourceDictionary>